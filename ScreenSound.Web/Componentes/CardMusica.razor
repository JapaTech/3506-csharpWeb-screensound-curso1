<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Musica!.nome</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">Ano de Lançamento: @Musica!.anoLancamento</MudText>
        <MudText Typo="Typo.body2">Artista: @Musica!.artistaNome</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Outlined"
                   Href=@($"/EditarArtista/{Musica!.nome}")
                   Color="Color.Warning"
                   Class="ml-auto">
            Detalhes
        </MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public MusicaResponse? Musica { get; set; }
}